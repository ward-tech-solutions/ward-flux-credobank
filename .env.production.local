# WARD OPS - Production Configuration for Local Testing
# Copy this to .env.production and fill in the values

# Database Configuration
POSTGRES_PASSWORD=ward_admin_password
DATABASE_URL=postgresql://ward_admin:ward_admin_password@postgres:5432/ward_ops

# Redis Configuration
REDIS_PASSWORD=redispass
REDIS_URL=redis://:redispass@redis:6379/0

# Security Keys
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here

# Admin User
DEFAULT_ADMIN_PASSWORD=admin123

# Monitoring Mode
MONITORING_MODE=snmp_only

# Optional: Zabbix Integration (if using hybrid mode)
ZABBIX_URL=
ZABBIX_USER=
ZABBIX_PASSWORD=

# Environment
ENVIRONMENT=production

# VictoriaMetrics (optional - for metrics)
VICTORIA_METRICS_URL=http://victoriametrics:8428
