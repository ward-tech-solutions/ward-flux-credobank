{
  "name": "Juniper Junos Standard",
  "description": "Standard monitoring template for Juniper routers and switches running Junos",
  "vendor": "Juniper",
  "device_types": ["router", "switch", "firewall"],
  "is_default": true,
  "items": [
    {
      "name": "System Description",
      "oid_name": "sysDescr",
      "oid": "1.3.6.1.2.1.1.1.0",
      "interval": 300,
      "value_type": "string",
      "units": "",
      "description": "Juniper model and Junos version"
    },
    {
      "name": "System Uptime",
      "oid_name": "sysUpTime",
      "oid": "1.3.6.1.2.1.1.3.0",
      "interval": 60,
      "value_type": "integer",
      "units": "timeticks",
      "description": "Time since last reboot"
    },
    {
      "name": "Routing Engine CPU",
      "oid_name": "jnxOperatingCPU",
      "oid": "1.3.6.1.4.1.2636.3.1.13.1.8",
      "interval": 60,
      "value_type": "gauge",
      "units": "%",
      "description": "Routing engine CPU utilization",
      "is_table": true
    },
    {
      "name": "Routing Engine Memory",
      "oid_name": "jnxOperatingBuffer",
      "oid": "1.3.6.1.4.1.2636.3.1.13.1.11",
      "interval": 60,
      "value_type": "gauge",
      "units": "%",
      "description": "Routing engine memory utilization",
      "is_table": true
    },
    {
      "name": "Chassis Temperature",
      "oid_name": "jnxOperatingTemp",
      "oid": "1.3.6.1.4.1.2636.3.1.13.1.7",
      "interval": 120,
      "value_type": "gauge",
      "units": "celsius",
      "description": "Chassis temperature sensors",
      "is_table": true
    },
    {
      "name": "FPC Status",
      "oid_name": "jnxFruState",
      "oid": "1.3.6.1.4.1.2636.3.1.15.1.6",
      "interval": 120,
      "value_type": "integer",
      "units": "",
      "description": "FRU state (6=online)",
      "is_table": true
    },
    {
      "name": "Interface Status",
      "oid_name": "ifOperStatus",
      "oid": "1.3.6.1.2.1.2.2.1.8",
      "interval": 60,
      "value_type": "integer",
      "units": "",
      "description": "Interface operational status",
      "is_table": true
    },
    {
      "name": "Interface Traffic In",
      "oid_name": "ifHCInOctets",
      "oid": "1.3.6.1.2.1.31.1.1.1.6",
      "interval": 60,
      "value_type": "counter64",
      "units": "bytes",
      "description": "High capacity inbound traffic",
      "is_table": true
    },
    {
      "name": "Interface Traffic Out",
      "oid_name": "ifHCOutOctets",
      "oid": "1.3.6.1.2.1.31.1.1.1.10",
      "interval": 60,
      "value_type": "counter64",
      "units": "bytes",
      "description": "High capacity outbound traffic",
      "is_table": true
    },
    {
      "name": "BGP Peer State",
      "oid_name": "jnxBgpM2PeerState",
      "oid": "1.3.6.1.4.1.2636.5.1.1.2.1.1.1.2",
      "interval": 120,
      "value_type": "integer",
      "units": "",
      "description": "BGP peer state (6=Established)",
      "is_table": true
    },
    {
      "name": "OSPF Neighbor State",
      "oid_name": "ospfNbrState",
      "oid": "1.3.6.1.2.1.14.10.1.6",
      "interval": 120,
      "value_type": "integer",
      "units": "",
      "description": "OSPF neighbor state (8=Full)",
      "is_table": true
    },
    {
      "name": "RPF Prefix Count",
      "oid_name": "jnxRpfStatsActiveRoutes",
      "oid": "1.3.6.1.4.1.2636.3.11.1.1.1",
      "interval": 300,
      "value_type": "gauge",
      "units": "routes",
      "description": "Number of active routes"
    },
    {
      "name": "Firewall Filter Packets",
      "oid_name": "jnxFWCounterPacketCount",
      "oid": "1.3.6.1.4.1.2636.3.5.2.1.5",
      "interval": 60,
      "value_type": "counter64",
      "units": "packets",
      "description": "Firewall filter packet counter",
      "is_table": true
    }
  ],
  "triggers": [
    {
      "name": "High CPU Usage",
      "expression": "jnxOperatingCPU > 85",
      "severity": "warning",
      "for_duration": 300,
      "description": "Routing engine CPU above 85%"
    },
    {
      "name": "Critical CPU Usage",
      "expression": "jnxOperatingCPU > 95",
      "severity": "critical",
      "for_duration": 120,
      "description": "Routing engine CPU above 95%"
    },
    {
      "name": "High Memory Usage",
      "expression": "jnxOperatingBuffer > 85",
      "severity": "warning",
      "for_duration": 300,
      "description": "Routing engine memory above 85%"
    },
    {
      "name": "High Temperature",
      "expression": "jnxOperatingTemp > 65",
      "severity": "warning",
      "for_duration": 300,
      "description": "Chassis temperature above 65°C"
    },
    {
      "name": "Critical Temperature",
      "expression": "jnxOperatingTemp > 75",
      "severity": "critical",
      "for_duration": 60,
      "description": "Chassis temperature above 75°C"
    },
    {
      "name": "FPC Offline",
      "expression": "jnxFruState != 6",
      "severity": "critical",
      "for_duration": 120,
      "description": "FPC is not online"
    },
    {
      "name": "Interface Down",
      "expression": "ifOperStatus == 2",
      "severity": "error",
      "for_duration": 60,
      "description": "Interface is operationally down"
    },
    {
      "name": "BGP Peer Down",
      "expression": "jnxBgpM2PeerState != 6",
      "severity": "critical",
      "for_duration": 180,
      "description": "BGP peer not in Established state"
    },
    {
      "name": "OSPF Neighbor Not Full",
      "expression": "ospfNbrState != 8",
      "severity": "warning",
      "for_duration": 120,
      "description": "OSPF neighbor not in Full state"
    }
  ]
}
