# WARD TECH SOLUTIONS - Environment Configuration Template
# Copy to .env: cp .env.example .env

# Zabbix API
ZABBIX_URL=http://your-zabbix-server:8080/api_jsonrpc.php
ZABBIX_USER=your_username
ZABBIX_PASSWORD=your_password

# Security Keys (Generate with: openssl rand -hex 32)
SECRET_KEY=generate-with-openssl-rand-hex-32
JWT_SECRET_KEY=generate-with-openssl-rand-hex-32

# Database
DATABASE_URL=sqlite:///data/ward_ops.db

# Application
DEBUG=False
HOST=0.0.0.0
PORT=5001
WORKERS=4

# Security
CORS_ORIGINS=*
ALLOWED_HOSTS=localhost,127.0.0.1,wardops.tech,*.wardops.tech

# Rate Limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_API=100/minute

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ward_ops.log
