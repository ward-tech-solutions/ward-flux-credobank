# ==================================================
# WARD FLUX - Environment Configuration
# ==================================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ==================================================
# Database Configuration
# ==================================================
# PostgreSQL (Production - recommended)
DATABASE_URL=postgresql://ward:YOUR_POSTGRES_PASSWORD@postgres:5432/ward_flux
POSTGRES_PASSWORD=YOUR_SECURE_POSTGRES_PASSWORD

# SQLite (Development - alternative)
# DATABASE_URL=sqlite:///./data/ward_ops.db
# USE_POSTGRES=false

# ==================================================
# Redis Configuration
# ==================================================
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD

# ==================================================
# VictoriaMetrics Configuration
# ==================================================
VICTORIA_URL=http://victoriametrics:8428

# ==================================================
# Security & Encryption
# ==================================================
# CRITICAL: Generate secure random keys for production!
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=GENERATE_YOUR_ENCRYPTION_KEY_HERE

# JWT Secret for session management
# Generate with: openssl rand -base64 32
SECRET_KEY=GENERATE_YOUR_SECRET_KEY_HERE

# ==================================================
# Zabbix Integration (Optional)
# ==================================================
# Only required if using ZABBIX or HYBRID monitoring mode
ZABBIX_URL=http://your-zabbix-server/api_jsonrpc.php
ZABBIX_USER=YOUR_ZABBIX_USERNAME
ZABBIX_PASSWORD=YOUR_ZABBIX_PASSWORD

# ==================================================
# Grafana Configuration
# ==================================================
GRAFANA_PASSWORD=YOUR_GRAFANA_PASSWORD

# ==================================================
# Application Settings
# ==================================================
# API Server
API_HOST=0.0.0.0
API_PORT=5001
LOG_LEVEL=INFO

# CORS (Comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5001

# ==================================================
# Celery Worker Configuration
# ==================================================
CELERY_WORKER_CONCURRENCY=4
CELERY_BEAT_SCHEDULE_INTERVAL=60

# ==================================================
# SNMP Polling Configuration
# ==================================================
SNMP_TIMEOUT=5
SNMP_RETRIES=3
SNMP_MAX_BULK_SIZE=25

# ==================================================
# Monitoring & Metrics
# ==================================================
METRICS_RETENTION_DAYS=365
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090

# ==================================================
# Email Notifications (Optional)
# ==================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=wardflux@yourdomain.com
SMTP_TLS=true

# ==================================================
# Backup Configuration
# ==================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/data/backups

# ==================================================
# Development Settings
# ==================================================
# Set to true for development mode
DEBUG=false
RELOAD=false
